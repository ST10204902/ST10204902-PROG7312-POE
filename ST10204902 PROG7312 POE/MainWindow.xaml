<Window
    x:Class="ST10204902_PROG7312_POE.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ST10204902_PROG7312_POE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Municipal Services"
    Width="350"
    Height="400"
    MinWidth="350"
    MinHeight="450"
    ui:WindowHelper.UseModernWindowStyle="True"
    Loaded="Window_Loaded"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="imgMunicipalLogo"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:3" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Main Menu Title Label  -->
        <TextBlock
            x:Name="txbMainMenuTitle"
            Grid.Row="0"
            Margin="16,0,16,0"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="Municipal Services Main Menu" />

        <!--  Municipal Logo  -->
        <Image
            x:Name="imgMunicipalLogo"
            Grid.Row="1"
            Margin="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Source="AppImages/MunicipalLogo.png" />


        <!--  Report Issues Button  -->
        <Button
            x:Name="btnReportIssues"
            Grid.Row="2"
            Margin="16,8,16,8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="btnReportIssues_Click">

            <ui:SimpleStackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Image
                    Width="32"
                    Height="32"
                    Source="AppImages/ReportIssueIcon.png" />
                <TextBlock
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Report Issues" />
            </ui:SimpleStackPanel>
        </Button>

        <!--  Local Events Button (disabled)  -->
        <Button
            Name="btnLocalEvents"
            Grid.Row="3"
            Margin="16,8,16,8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Content="Local Events and Announcements"
            IsEnabled="False" />

        <!--  Service Request Status Button (disabled)  -->
        <Button
            Name="btnServiceStatus"
            Grid.Row="4"
            Margin="16,8,16,8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Content="Service Request Status"
            IsEnabled="False" />

        <Button
            Name="btnFeedback"
            Grid.Row="5"
            Margin="16,8,16,8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="btnFeedback_Click"
            Content="Application Feedback" />

        <!--  Exit Button  -->
        <Button
            Name="btnExit"
            Grid.Row="6"
            Margin="16,8,16,16"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Click="btnExit_Click"
            Content="Exit" />
    </Grid>
</Window>
